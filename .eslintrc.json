{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@root", "."],
          ["@controllers", "./controllers"],
          ["@helpers", "./helpers"],
          ["@components", "./source/components"],
          ["@javascript", "./source/javascript"],
          ["@sass", "./source/sass"]
        ],
        "extensions": [".ts", ".js", ".jsx", ".json"]
      }
    }
  },
  "rules": {
    "comma-dangle": 0,
    "prefer-const": 1,
    "no-const-assign": 1,
    "no-console": 0
  }
}
